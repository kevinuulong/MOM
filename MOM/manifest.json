{

  "manifest_version": 2,
  "name": "MOM | Modern Online Monitor",
  "version": "3.0",

  "description": "Modern Online Monitor",

  "homepage_url": "https://modernonlinemonitor.netlify.com",

  "permissions": [
    "tabs",
    "storage",
    "downloads"
  ],

  "background": {
    "scripts": ["bkg.js"]
  },

  "options_page": "/options/options.html",

  "browser_action": {
      "default_popup": "popup.html" 
  },
  "icons": {
      "16": "images/MOM16.png",
      "32": "images/MOM32.png",
      "48": "images/MOM48.png",
      "128": "images/MOM128.png"
  }

}
